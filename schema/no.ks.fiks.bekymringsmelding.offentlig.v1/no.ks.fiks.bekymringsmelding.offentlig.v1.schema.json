{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "$id": "https://fiks.ks.no/bekymringsmelding.offentlig.v1.schema.json",
  "type": "object",
  "definitions": {
    "adresse": {
      "type": "object",
      "required": [
        "adresselinje1"
      ],
      "properties": {
        "adresselinje1": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "adresselinje2": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "adresselinje3": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "postnummer": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "poststed": {
          "type": "string",
          "pattern": "^(.*)$"
        }
      }
    },
    "orientert": {
      "type": "boolean"
    },
    "orientertGrunn": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "personnavn": {
      "type": "string",
      "pattern": "^(.*)$"
    }
  },
  "required": [
    "kommunenummer",
    "kommunenavn",
    "bydelsnummer",
    "bydelsnavn",
    "melder",
    "barn",
    "foresatte",
    "melding"
  ],
  "properties": {
    "kommunenummer": {
      "type": "string",
      "pattern": "^\\d{4}$"
    },
    "kommunenavn": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "bydelsnummer": {
      "type": "string",
      "pattern": "^[0-9]{2}$"
    },
    "bydelsnavn": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "melder": {
      "type": "object",
      "required": [
        "fnr",
        "personnavn",
        "rolle",
        "telefonnummer",
        "epost",
        "virksomhet"
      ],
      "properties": {
        "fnr": {
          "type": "string",
          "pattern": "^[0-9]{11}$"
        },
        "personnavn": {
          "$ref": "#/definitions/personnavn"
        },
        "rolle": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "telefonnummer": {
          "type": "string",
          "pattern": "^[+]?[0-9]+([- ][0-9]+)*$"
        },
        "epost": {
          "type": "string",
          "pattern": "^[A-Za-zæøåÆØÅ0-9-_]+(\\.[A-Za-zæøåÆØÅ0-9-_]+)*@[A-Za-zæøåÆØÅ0-9-]+(\\.[A-Za-zæøåÆØÅ0-9-]+)*(\\.[A-Za-z]{2,})$"
        },
        "virksomhet": {
          "type": "object",
          "required": [
            "navn",
            "adresse"
          ],
          "properties": {
            "navn": {
              "type": "string",
              "pattern": "^(.*)$"
            },
            "orgnr": {
              "type": "string",
              "pattern": "^(.*)$"
            },
            "adresse": {
              "$ref": "#/definitions/adresse"
            }
          }
        }
      }
    },
    "barn": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "fnr",
          "ufoedt",
          "personnavn",
          "relasjon",
          "adresse",
          "orientert"
        ],
        "properties": {
          "fnr": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "ufoedt": {
            "type": "boolean"
          },
          "personnavn": {
            "$ref": "#/definitions/personnavn"
          },
          "telefonnummer": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "relasjon": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "adresse": {
            "$ref": "#/definitions/adresse"
          },
          "orientert": {
            "$ref": "#/definitions/orientert"
          },
          "orientertGrunn": {
            "$ref": "#/definitions/orientertGrunn"
          }
        }
      }
    },
    "foresatte": {
      "type": "array",
      "items": {
        "$id": "#/properties/foresatte/items",
        "type": "object",
        "required": [
          "personnavn",
          "orientert"
        ],
        "properties": {
          "personnavn": {
            "$ref": "#/definitions/personnavn"
          },
          "telefonnummer": {
            "type": "string",
            "pattern": "^(.*)$"
          },
          "orientert": {
            "$ref": "#/definitions/orientert"
          },
          "orientertGrunn": {
            "$ref": "#/definitions/orientertGrunn"
          }
        }
      }
    },
    "behovForTolk": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "andreHjelpeinstanser": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "melding": {
      "type": "object",
      "required": [
        "melding",
        "historie"
      ],
      "properties": {
        "melding": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "historie": {
          "type": "string",
          "pattern": "^(.*)$"
        }
      }
    }
  }
}